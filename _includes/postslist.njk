{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<ul reversed class="postlist">
{% for post in postslist %}
	{% set displayTitle = post.data.display_title if post.data.display_title else post.data.title %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<p><a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ displayTitle | markdown | safe }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></p>
		{% if post.data.description %}<p>{{ post.data.description | markdown | safe }}</p>{% endif %}
		<time class="post--meta" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL dd, yyyy") }}</time>
		</span>
	</li>
{% endfor %}
</ul>
