---
layout: layouts/base.njk
templateClass: tmpl-post
---
<link rel="stylesheet" href="/css/glightbox.css">
<div class="content-main container">
<h1>{% markdown %}{{ display_title or title }}{% endmarkdown %}</h1>
<div class="post--meta">Published <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
	{% if tags.length > 0 %} in
	{% for tag in tags -%}
		<a class="tag" href="/tags/{{ tag }}" class="tag">#{{ tag }}</a>{% if not loop.last %}, {% endif %}
	{% endfor -%}
	{% endif %}
</div>
{{ content | safe }}
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="post--next-previous-link">
<nav class="pagination--inner" aria-label="Pagination links">
	{%- if previousPost %}<p class="left">
		<strong>Previous</strong>:
		<a class="previous" href="{{ previousPost.url }}">{{ previousPost.data.display_title or previousPost.data.title }}</a>
	</p>{% endif %}
	{%- if nextPost %}<p class="right">
		<strong>Next</strong>:
		<a class="next" href="{{ nextPost.url }}">{{ nextPost.data.display_title or nextPost.data.title }}</a>
	</p>{% endif %}
</nav>
</div>
{%- endif %}
{%- endif %}
</div>
<script src="{{ '/js/glightbox.js' }}" defer></script>
<script src="{{ '/js/videoloop.js' }}" defer></script>
<script type="module">
const lightbox = GLightbox({
		touchNavigation: true,
		loop: true,
		keyboardNavigation: true,
		selector: 'a:has(> .glightbox)'
});
lightbox.init();
console.log('lightbox init');
</script>
